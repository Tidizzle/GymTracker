<Page x:Class="GymTracker.Views.SubViews.ResetPasswordSub"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GymTracker.Views.SubViews"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="350"
      Title="ResetPasswordSub">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        
        <Label Content="Enter New Password:" FontSize="15" FontWeight="UltraLight" VerticalAlignment="Center"/>
        <Label Content="Confirm New Password:" FontSize="15" FontWeight="UltraLight" VerticalAlignment="Center" Grid.Row="1"></Label>
        
        <PasswordBox Grid.Column="1" Width="150" Height="30" VerticalContentAlignment="Center" Name="PasswordBoxLocal" PasswordChanged="PasswordBoxLocal_OnPasswordChanged"/>
        <PasswordBox Grid.Row="1" Grid.Column="1"  Width="150"  Height="30" VerticalContentAlignment="Center" Name="PasswordConfBox" PasswordChanged="PasswordConfBox_OnPasswordChanged"/>
    </Grid>
</Page>
