<Page x:Class="GymTracker.Views.SubViews.ResetSecurityQues"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GymTracker.Views.SubViews"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="350"
      Title="ResetSecurityQues">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Name="SecQues" Content="Security Question" FontSize="20" FontWeight="UltraLight" VerticalAlignment="Center" HorizontalAlignment="Center"  Width="340"/>
        <TextBox Name="AnswerTextBox" Grid.Row="1" Width="250" Height="30" VerticalAlignment="Top" Margin="0,15,0,0"/>        
    </Grid>
</Page>
