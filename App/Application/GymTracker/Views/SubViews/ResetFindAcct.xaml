<Page x:Class="GymTracker.Views.SubViews.ResetFindAcct"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GymTracker.Views.SubViews"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="350"
      Title="ResetFindAcct">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Label Content="Enter Username:" FontSize="20" FontWeight="UltraLight" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,15,125,0"/>
        <TextBox Name="FindUNTextbox" Grid.Row="1" Width="250" Height="30" VerticalAlignment="Top" Margin="0,15,0,0" VerticalContentAlignment="Center" TextChanged="FindUNTextbox_TextChanged"/>
    </Grid>
</Page>
