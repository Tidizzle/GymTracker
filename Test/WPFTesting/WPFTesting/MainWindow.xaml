<Window x:Class="WPFTesting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTesting"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Name="LeftColumn"  Width="150"/>
                <ColumnDefinition Name="RightColumn" Width="150"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Background="Red"/>
            <Grid Grid.Row="1" Grid.Column="1" Background="Blue"/>
        </Grid>
        
        

        
        
        <Button Height="45" Width="100" Content="Extend Red" Click="RedButton_OnClick" Margin="0,0,150,0"/>
        <Button Height="45" Width="100" Content="Extend Blue" Click="BlueButton_OnClick" Margin="150,0,0,0"/>
        
    </Grid>
</Window>
